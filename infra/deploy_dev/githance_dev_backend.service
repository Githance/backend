[Unit]
Description=Githance Dev Backend
Requires=docker_check.service
After=docker_check.service

[Service]
Restart=always
RestartSec=5
TimeoutStartSec=1200

WorkingDirectory=%h/GITHANCE_DEV/

# Remove old containers and networks
ExecStartPre=docker compose -f docker-compose_dev.yaml --env-file .github_vars pull
ExecStartPre=docker compose -f docker-compose_dev.yaml --env-file .github_vars down

# Compose up
ExecStart=docker compose -f docker-compose_dev.yaml --env-file .github_vars up --detach

# Compose down
ExecStop=docker compose -f docker-compose_dev.yaml --env-file .github_vars down

[Install]
WantedBy=default.target